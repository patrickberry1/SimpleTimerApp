<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleTimerApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary2</item>
        <item name="colorSecondaryVariant">@color/primary2</item>
        <item name="colorOnSecondary">@color/accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="NumberPickerText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:color">@color/accent</item>
        <item name="android:colorPrimary">@color/accent</item>
    </style>
</resources>