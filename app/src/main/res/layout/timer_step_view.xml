<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/timer_step_counter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:background="@drawable/ll_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/step_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:drawableBottom="@color/primary1"
                    android:gravity="left"
                    android:hint="Name"
                    android:textColor="@color/accent1"
                    android:textColorHint="@color/accent1"
                    android:textSize="25dp" />

                <ImageButton
                    android:id="@+id/step_delete_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:background="@drawable/ll_background"
                    app:srcCompat="@drawable/baseline_delete_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/step_mins_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:theme="@style/NumberPickerText" />

                <TextView
                    android:id="@+id/mins_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="minutes"
                    android:textColor="@color/accent1"
                    android:textSize="15dp" />

                <Spinner
                    android:id="@+id/step_secs_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:theme="@style/NumberPickerText" />

                <TextView
                    android:id="@+id/secs_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="seconds"
                    android:textColor="@color/accent1"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/reps_input_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@color/accent1"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="@color/accent1" />

                <TextView
                    android:id="@+id/reps_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reps"
                    android:textColor="@color/accent1" />

                <EditText
                    android:id="@+id/rest_input_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableBottom="@color/accent1"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/accent1" />

                <TextView
                    android:id="@+id/rest_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rest Seconds"
                    android:textColor="@color/accent1" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>